
<h1 class="whiteBoardHeader text-center">3. Finish Up </h1>

<div class ="col-md-4 col-md-offset-4">
<%=form_for @member do |m| %>
  <h2 class="h2s">Account Info:</h2>
    <p class="error"><%= flash[:error] %></p>
    Email: <%=m.text_field :email, class: "form-control" %>
    Password: <%=m.password_field :password, class: "form-control"%>
    <%= m.hidden_field :plan, :value => nil, class: "planFromLocal"%>
    <%=m.hidden_field :product_one, :value => nil, class: "extraOne"%>
    <%=m.hidden_field :product_two, :value => nil, class: "extraTwo"%>
    <%=m.hidden_field :product_three, :value => nil, class: "extraThree"%>


  <hr>
  <h2 class="h2s">Shipping:</h2>
    Address: <%=m.text_area :address, class: "form-control" %>
  <hr>
  <h2 class="h2s">Billing:</h2>
      Card # <%=m.number_field :cc, class: "form-control" %>
    <hr>
    <div class="text-center">
      <%=m.submit 'Create Account', class: "btn btn-primary btn-lg createAccount"%>
    </div>
    <hr>
<%end%>
</div>
<script type="text/javascript">
$('.planFromLocal').val(localStorage.plan)
// $('.extraOne').val("{:one =>"+ localStorage.extra_one +", :two => " + localStorage.extra_two+ ",:three=> "+ localStorage.extra_three+"}")
// $('.extraOne').val("["+localStorage.extra_one +", " + localStorage.extra_two+ ", "+ localStorage.extra_three+"]")
$('.extraOne').val(localStorage.extra_one)
$('.extraTwo').val(localStorage.extra_two)
$('.extraThree').val(localStorage.extra_three)

  console.log(localStorage.extra_one)

</script>
