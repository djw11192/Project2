
<h1 class="whiteBoardHeader text-center">Finish Up </h1>

<div class ="col-md-4 col-md-offset-4">
<%=form_for @member do |m| %>
  <h2 class="h2s">Account Info:</h2>
    <p class="error"><%= flash[:error] %></p>
    Email: <%=m.text_field :email, class: "form-control" %>
    Password: <%=m.password_field :password, class: "form-control"%>
    <%= m.hidden_field :plan, :value => params[:plan].to_s%>
    <!-- <%= m.hidden_field :status, :value => "active".to_s%> <br>
    <%= m.hidden_field :frequency, :value => "monthly".to_s%> <br> -->
  <hr>
  <h2 class="h2s">Shipping:</h2>
    Address: <%=m.text_area :address, class: "form-control" %>
  <hr>
  <h2 class="h2s">Billing:</h2>
      Card # <%=m.number_field :cc, class: "form-control" %>
    <hr>
    <div class="text-center">
      <%=m.submit 'Create Account', class: "btn btn-primary btn-lg"%>
    </div>
    <hr>
<%end%>
</div>
