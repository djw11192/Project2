<h1 class="text-center whiteBoardHeader">2. Add Extras</h2>

  <div class="col-md-4 planCenter" extraName="Erasers">
    <%= image_tag('erasers.jpg', class: "planPic")%>
    <br>
    <h3 class="text-center">Regular</h3>
    <div class='text-center btn btn-primary btn-lg extra extraOne'>Add</div>
    <br>
    <h3 class="text-center planPrice">$3</h3>
  </div>

  <div class="col-md-4 planCenter" extraName="Cleaning Cloth">
    <%= image_tag('cloth.jpg', class: "planPic")%>
    <br>
    <h3 class="text-center">Cleaning Cloth</h3>
    <div class='text-center btn btn-primary btn-lg extra extraTwo'>Add</div>
    <br>
    <h3 class="text-center planPrice">$4</h3>
  </div>

  <div class="col-md-4 planCenter" extraName="Eraser Fluid">
    <%= image_tag('spray.jpg', class: "planPic")%>
    <br>
    <h3 class="text-center">Eraser Fluid</h3>
    <div class='text-center btn btn-primary btn-lg extra extraThree'>Add</div>
    <br>
    <h3 class="text-center planPrice">$5</h3>
  </div>

<div class="text-center">
  <%=link_to 'Next', "/join/confirm", class: 'text-center btn btn-primary btn-lg next'%>
</div>


  <script type="text/javascript">
    localStorage.extra_one = ""
    localStorage.extra_two = ""
    localStorage.extra_three = ""

      $('.extraOne').on('click', function(){
        localStorage.extra_one = $(this).parent().attr('extraName')
      })
      $('.extraTwo').on('click', function(){
        localStorage.extra_two = $(this).parent().attr('extraName')
      })
      $('.extraThree').on('click', function(){
        localStorage.extra_three = $(this).parent().attr('extraName')
      })

      $('.extra').each(function(){
        $(this).on('click', function(){
          $(this).addClass('btn-success')
          $(this).text('Added!')
        })
      })

  </script>
